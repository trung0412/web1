<style>
    #Datmua a{
        clear:both; background-color:red; 
        color:white; width:120px; height:35px;
        display:block; float:right; text-align:center;
        padding-top: 10px; text-decoration:none; font-weight:bold;

    }
    #Datmua a:hover {
        background-color:gray;
        color:red;
    }
</style>
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h1>CHI TIẾT SẢN PHẨM</h1>
<div>
    <div style="width:40%; float:left;border-left:dotted 1px; border-color:azure">
        <img src="~/Hinhsanpham/13.png" width="100%" />
    </div>
    <div style="width:60%; float:left;padding:10px">
        <h4 style="font-weight:bold;color:red">Tên sản phẩm : @Model.TenSP</h4>
        <p style="text-align:justify"><span style="font-weight:bold">Mô tả: </span>@Model.Mota</p>
        <p style="font-weight: bold">Giá bán: <span style="color: red;font-size:16pt">@Model.Giaban VNĐ</span></p>
    </div>
    <div>
        <div id="Datmua">
            <a href="@Url.Action("AddToCard", "ShoppingCard", new { id = Model.MaSP})" class="list-group-item">
                ĐẶT MUA
            </a>
        </div>
    </div>
</div>

